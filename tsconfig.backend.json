{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@/controllers/*": ["authcontroller/*"],
      "@/routes/*": ["authroutes/*"],
      "@/lib/*": ["lib/*"]
    }
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.tsx" 
  ],
  "exclude": [
    "node_modules",
    ".next", 
    "**/*.spec.ts",
    "**/*.test.ts",
    "next-env.d.ts",
    "src/pages/**/*",
    "src/app/**/*"   
  ]
}